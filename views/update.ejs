<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div id="form-pd" class="col-md-4">
            <form id="update-form" action="/users/<%=currentUser._id%>?_method=PUT" method="POST">
                <div class="card-block">
                    <div class="text-center">
                        <h3><i class="fa fa-lock"></i> Update:</h3>
                        <hr class="mt-2 mb-2">
                    </div>
                    <div class="md-form">
                        <i class="fa fa-tick prefix"></i>
                        <input type="text" id="fullName" name="fullName" value="<%=currentUser.fullName%>" class="form-control">
                        <label for="fullName">Full Name</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-tick prefix"></i>
                        <input type="text" id="city" name="city" value="<%=currentUser.city%>" class="form-control">
                        <label for="city">City</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-tick prefix"></i>
                        <input type="text" id="country" name="country" value="<%=currentUser.country%>" class="form-control">
                        <label for="country">Country</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-deep-purple">Update</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<% include ./partials/footer %>